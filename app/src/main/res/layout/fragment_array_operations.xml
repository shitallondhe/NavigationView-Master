<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b7bdc2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSARes"
        android:textColor="#0d0d0c"
        android:textSize="18sp"
        android:layout_below="@+id/txtResult"
        android:gravity="top"
        android:layout_alignLeft="@+id/edtEtrNum"
        android:layout_alignStart="@+id/edtEtrNum"
        android:layout_marginTop="49dp" />

    <TextView
        android:text="Array Operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtArroper"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/edtEtrNum"
        android:layout_above="@+id/txtResult"
        android:layout_alignRight="@+id/txtResult"
        android:layout_alignEnd="@+id/txtResult" />

    <Button
        android:text="Add Element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:textAllCaps="false"
        android:layout_below="@+id/txtArroper"
        android:layout_toRightOf="@+id/btn_Result"
        android:layout_toEndOf="@+id/btn_Result"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Sum Of Odd Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSumOfOdd"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edtOdd"
        android:layout_alignBottom="@+id/edtOdd"
        android:layout_alignRight="@+id/txtSumOfEven"
        android:layout_alignEnd="@+id/txtSumOfEven" />

    <TextView
        android:text="Sum Of Even Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSumOfEven"
        android:textSize="18sp"
        android:layout_below="@+id/edtOdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/edtEven"
        android:layout_alignBaseline="@+id/txtSumOfEven"
        android:layout_alignBottom="@+id/txtSumOfEven"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/edtOdd"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/txtSARes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/btn_Result"
        android:textAllCaps="false"
        android:layout_below="@+id/edtEven"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Sorted Array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/txtResult"
        android:textSize="18sp"
        android:layout_below="@+id/btnAdd"
        android:layout_toLeftOf="@+id/btn_Result"
        android:layout_toStartOf="@+id/btn_Result" />
</RelativeLayout>
