<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7bdc2">




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="6"
        android:id="@+id/edtLengthinFoot"
        android:layout_alignBaseline="@+id/txtLengthinFoot"
        android:layout_alignBottom="@+id/txtLengthinFoot"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Length in Inches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLengthinFoot"
        android:layout_marginTop="56dp"
        android:id="@+id/txtLengthinInches"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="6"
        android:id="@+id/edtLengthinInches"
        android:layout_alignBaseline="@+id/txtLengthinInches"
        android:layout_alignBottom="@+id/txtLengthinInches"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Length in Centimeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter Length in Foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLengthinFoot"
        android:layout_marginTop="54dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtLengthinInches"
        android:layout_toEndOf="@+id/txtLengthinInches"
        android:id="@+id/edtLengthinCentimeter" />

    <Button
        android:text="Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLengthinCentimeter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:textColor="#fd8d14"
        android:id="@+id/btnResult"
        android:textAllCaps="false" />


</RelativeLayout>