<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b7bdc2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:layout_alignBottom="@+id/txtSecondNo"
        android:layout_alignLeft="@+id/edtFirstNo"
        android:layout_alignStart="@+id/edtFirstNo"
        android:id="@+id/edtSecondNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFirstNo"
        android:text="Enter First Number"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:id="@+id/edtFirstNo"
        android:layout_alignBaseline="@+id/txtFirstNo"
        android:layout_alignBottom="@+id/txtFirstNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Second Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/txtSecondNo"
        android:layout_below="@+id/edtFirstNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDiv"
        android:minWidth="65dip"
        android:layout_alignBaseline="@+id/btnMult"
        android:layout_alignBottom="@+id/btnMult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:minWidth="65dip"
        android:layout_alignBaseline="@+id/btnSub"
        android:layout_alignBottom="@+id/btnSub" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="5"
        android:layout_marginTop="23dp"
        android:id="@+id/edtResult"
        android:layout_below="@+id/edtSecondNo"
        android:layout_alignLeft="@+id/btnMult"
        android:layout_alignStart="@+id/btnMult"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:text="Final Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFinalResult"
        android:layout_alignBottom="@+id/edtResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:textSize="18sp" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMult"
        android:minWidth="65dip"
        android:layout_alignBaseline="@+id/btnSub"
        android:layout_alignBottom="@+id/btnSub"
        android:layout_toLeftOf="@+id/btnDiv"
        android:layout_toStartOf="@+id/btnDiv"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSub"
        android:minWidth="65dip"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/txtFinalResult"
        android:layout_alignRight="@+id/txtFirstNo"
        android:layout_alignEnd="@+id/txtFirstNo" />
</RelativeLayout>
