<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#b7bdc2"
    android:layout_height="match_parent">

    <!--Sent mail -->



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/txtEnterRadius"
        android:layout_toEndOf="@+id/txtEnterRadius"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="36dp"
        android:id="@+id/edtEnterRadius" />

    <TextView
        android:text="Enter the Radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnterRadius"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edtEnterRadius"
        android:layout_alignBottom="@+id/edtEnterRadius"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFinalResult"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/btnAreaCircle"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:text="Area Of Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0409f7"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Circle Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAreaCircle"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginBottom="143dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>